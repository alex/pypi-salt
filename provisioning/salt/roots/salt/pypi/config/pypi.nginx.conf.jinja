{% set config = salt['pillar.get'](app_key) %}

server {
  listen 80;
  server_name {{ " ".join(config['server_names']) }};
  include conf.d/{{ config['name'] }}/app.conf;
}

server {
  listen 443;
  server_name {{ " ".join(config['server_names']) }};
  include nginx.ssl.conf;
  include conf.d/{{ config['name'] }}/app.conf;
}
