[database]

; Postgres Database
host = localhost
name = pypi
user = pypi
password=pypi

; Redis
redis_url = redis://localhost:6379/0

; Storage Directories
files_dir = /data/pypi/packages
docs_dir = /data/pypi/packagedocs

; Third-Party
pubsubhubbub = http://pubsubhubbub.appspot.com/

[webui]

; PyPI config
debug_mode = no
rss_file = /data/pypi/pypi_rss.xml
packages_rss_file = /data/pypi/pypi_packages_rss.xml

; Email
mailhost = localhost:25
adminemail = cheeseshop@python.org
replyto = cheeseshop@python.org

; Secrets
sshkeys_update = /opt/pypi/src/sshkeys_update
key_dir = /data/pypi/secret
cheesecake_password = secret
reset_secret = secret

; URI Paths
simple_script = /simple
raw_package_prefix = /raw-packages
simple_sign_script = /serversig

; URLs
url = http://localhost:8080/pypi
files_url = http://localhost:8080/packages/
pydotorg = https://www.python.org/
package_docs_url = http://pythonhosted.org/

[passlib]
schemes = django_bcrypt, unix_disabled

[logging]
file = /var/log/pypi/pypi.log
mailhost =
fromaddr =
toaddrs =

[sentry]
dsn =

[uwsgi]
uid=pypi
gid=pypi
wsgi-file = /opt/pypi/src/pypi.wsgi
socket = /var/run/pypi/pypi.sock
pidfile = /var/run/pypi/pypi.pid
daemonize = 127.0.0.1:8224
processes = 5
harakiri = 60
reload-on-as = 400
max-requests = 10000
master = 1
post-buffering = 8192
chmod-socket = 666
disable-logging = true
log-5xx = true

; CDN API
[fastly]
api_domain = https://api.fastly.com/
api_key =
service_id =
