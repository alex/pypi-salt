{% set internal = salt['pillar.get']('pypi_internal_network') %}
{% set postgres_nodes = salt['pillar.get']('postgresql_cluster') %}
{% set pgpool_nodes = salt['pillar.get']('pgpool_cluster').get('nodes') %}
{% set pgpool_vip = salt['pillar.get']('pgpool_cluster:virtual_ip') %}
{% set ips = salt['ip_picker.ip_addrs'](cidr=internal) %}

#------------------------------------------------------------------------------
# CONNECTIONS
#------------------------------------------------------------------------------

listen_addresses = '*'
port = {{ salt['pillar.get']('pgpool_cluster:listen_address', 9999)  }}
socket_dir = '/var/run/pgpool-II-93/'

pcp_port = 9898
pcp_socket_dir = '/var/run/pgpool-II-93/'

backend_hostname0 = '{{ postgres_nodes['primary_server'] }}'
backend_port0 = 5432
backend_weight0 = 1
#backend_data_directory0 = '/var/lib/pgsql/9.3/data'
#backend_flag0 = 'ALLOW_TO_FAILOVER'

{% for node in postgres_nodes['standby_servers'] %}
backend_hostname{{ loop.index }} = '{{ node }}'
backend_port{{ loop.index }} = 5432
backend_weight{{ loop.index }} = 1
#backend_data_directory{{ loop.index }} = '/var/lib/pgsql/9.3/data'
#backend_flag{{ loop.index }} = 'ALLOW_TO_FAILOVER'
{% endfor %}

enable_pool_hba = off
pool_passwd = 'pool_passwd'
authentication_timeout = 60

ssl = off
#ssl_key = './server.key'
#ssl_cert = './server.cert'
#ssl_ca_cert = ''
#ssl_ca_cert_dir = ''

#------------------------------------------------------------------------------
# POOLS
#------------------------------------------------------------------------------

num_init_children = 8
max_pool = 4

child_life_time = 300
child_max_connections = 0
connection_life_time = 0
client_idle_limit = 0

#------------------------------------------------------------------------------
# LOGS
#------------------------------------------------------------------------------

log_destination = 'syslog'

print_timestamp = on
log_connections = off
log_hostname = off
log_statement = off
log_per_node_statement = off
log_standby_delay = 'always'

syslog_facility = 'LOCAL0'
syslog_ident = 'pgpool'

debug_level = 0

#------------------------------------------------------------------------------
# FILE LOCATIONS
#------------------------------------------------------------------------------

pid_file_name = '/var/run/pgpool-II-93/pgpool.pid'
logdir = '/var/log/pgpool-II'

#------------------------------------------------------------------------------
# CONNECTION POOLING
#------------------------------------------------------------------------------

connection_cache = on
reset_query_list = 'ABORT; DISCARD ALL'
#reset_query_list = 'ABORT; RESET ALL; SET SESSION AUTHORIZATION DEFAULT'

#------------------------------------------------------------------------------
# REPLICATION MODE
#------------------------------------------------------------------------------

replication_mode = off
replicate_select = off
insert_lock = on
lobj_lock_table = ''

replication_stop_on_mismatch = off
failover_if_affected_tuples_mismatch = off

#------------------------------------------------------------------------------
# LOAD BALANCING MODE
#------------------------------------------------------------------------------

load_balance_mode = on
ignore_leading_white_space = on
white_function_list = ''
black_function_list = 'nextval,setval'

#------------------------------------------------------------------------------
# MASTER/SLAVE MODE
#------------------------------------------------------------------------------

master_slave_mode = on
master_slave_sub_mode = 'stream'

sr_check_period = 10
sr_check_user = 'postgres'
sr_check_password = ''
delay_threshold = 1024

follow_master_command = ''

#------------------------------------------------------------------------------
# PARALLEL MODE
#------------------------------------------------------------------------------

parallel_mode = off
pgpool2_hostname = ''

system_db_hostname  = 'localhost'
system_db_port = 5432
system_db_dbname = 'pgpool'
system_db_schema = 'pgpool_catalog'
system_db_user = 'pgpool'
system_db_password = ''

#------------------------------------------------------------------------------
# HEALTH CHECK
#------------------------------------------------------------------------------

health_check_period = 5
health_check_timeout = 6
health_check_user = 'postgres'
health_check_password = ''
health_check_max_retries = 5
health_check_retry_delay = 1

#------------------------------------------------------------------------------
# FAILOVER AND FAILBACK
#------------------------------------------------------------------------------

failover_command = ''
failback_command = ''

fail_over_on_backend_error = on
search_primary_node_timeout = 10

#------------------------------------------------------------------------------
# ONLINE RECOVERY
#------------------------------------------------------------------------------

recovery_user = 'nobody'
recovery_password = ''
recovery_1st_stage_command = ''
recovery_2nd_stage_command = ''
recovery_timeout = 90
client_idle_limit_in_recovery = 0

#------------------------------------------------------------------------------
# WATCHDOG
#------------------------------------------------------------------------------

use_watchdog = on

trusted_servers = ''
ping_path = '/bin'

wd_hostname = '{{ ips[0] }}'
wd_port = 9000
wd_authkey = ''

delegate_IP = ''
#ifconfig_path = '/sbin'
#if_up_cmd = 'sudo ifconfig eth2:0 inet $_IP_$ netmask 255.255.255.0'
#if_down_cmd = 'sudo ifconfig eth2:0 down'
#arping_path = '/usr/sbin'           # arping command path
#arping_cmd = 'sudo arping -U $_IP_$ -w 1 -I eth2'

clear_memqcache_on_escalation = on
wd_escalation_command = ''

wd_lifecheck_method = 'heartbeat'
wd_interval = 3

wd_heartbeat_port = 9694
wd_heartbeat_keepalive = 2
wd_heartbeat_deadtime = 30

{% for node in pgpool_nodes %}
heartbeat_destination{{ loop.index0 }} = '{{ node }}'
heartbeat_destination_port{{ loop.index0 }} = 9694 
heartbeat_device{{ loop.index0 }} = ''
{% endfor %}

wd_life_point = 3
wd_lifecheck_query = 'SELECT 1'
wd_lifecheck_dbname = 'template1'
wd_lifecheck_user = 'postgres'
wd_lifecheck_password = ''


{% for node in pgpool_nodes %}
other_pgpool_hostname{{ loop.index0 }} = '{{ node }}'
other_pgpool_port{{ loop.index0 }} = 9999
other_wd_port{{ loop.index0 }} = 9000
{% endfor %}

#------------------------------------------------------------------------------
# OTHERS
#------------------------------------------------------------------------------

relcache_expire = 0
relcache_size = 256
check_temp_table = on

#------------------------------------------------------------------------------
# ON MEMORY QUERY MEMORY CACHE
#------------------------------------------------------------------------------

memory_cache_enabled = off
memqcache_method = 'shmem'
memqcache_memcached_host = 'localhost'
memqcache_memcached_port = 11211
memqcache_total_size = 67108864
memqcache_max_num_cache = 1000000
memqcache_expire = 0
memqcache_auto_cache_invalidation = on
memqcache_maxcache = 409600
memqcache_cache_block_size = 1048576
memqcache_oiddir = '/var/log/pgpool/oiddir'
white_memqcache_table_list = ''
black_memqcache_table_list = ''
